<div class="edit">
<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>erroes prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <p>Title</p>
  </div>
  <%= f.text_field :title %>
  <div class="area">
    <p>Body</p>
  </div>
  <%= f.text_area :body %>
  <div class="action">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

  <div class="link">
    <p>
    <span><%= link_to "Show", book_path(@book) %></span>
    |
    <span><%= link_to "Back", "/books" %></span>
    </p>
  </div>
</div>