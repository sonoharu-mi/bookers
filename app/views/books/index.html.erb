<div class="index">
  <div class="index-1">
    <h1>Books</h1>
  </div>
  <table>
    <thead>
      <tr>
        <th class="th-title"><p>Title</p></th>
        <th class="th-body"><p>Body</p></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "Show", book_path(book.id) %>
          </td>
          <td>
            <%= link_to "Edit", edit_book_path(book.id) %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="index-2">
    <h2>New book</h2>
  </div>
  <div class="error">
    <% if @book.errors.any? %>
    <%= @book.errors.count %>erroes prohibited this book from being saved:
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  
  <%= form_with model: @book do |f| %>
    <div class="index-3">
      <p>Title</p>
      <%= f.text_field :title %>
    </div>
    <div class="index-4">
      <p>Body</p>
      <%= f.text_area :body %>
    </div>
    <div class="index-5">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>