<h1>Books</h1>

<% @books.each do |book| %>
  <table>
  <thead>
      </tr>
        <th><p>Title</p></th>
        <th><p>Body</p></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><span><%= book.title %></span></td>
        <td><span><%= book.body %></span></td>
        <td><span><%= link_to "show", "/books/#{book.id}" %></span></td>
      </tr>
    </tbody>
  </table>
<% end %>

<h3>New book</h3>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>