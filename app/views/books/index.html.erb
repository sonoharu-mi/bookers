<div class="index">
  <div class="index-1">
    <h1>Books</h1>
  </div>
  
  <table>
    <thead>
      <tr>
        <th><p>Title</p></th>
        <th><p>Body</p></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.title %></td>
          <td>
            <div class="link">
              <%= link_to "Show", book_path(book.id) %>
            </div>
          </td>
          <td>
            <div class="link">
              <%= link_to "Edit", edit_book_path(book.id) %>
            </div>
          </td>
          <td>
            <div class="link">
              <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>


<h3>New book</h3>
<% if @book.errors.any? %>
  <%= @book.errors.count %>erroes prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <p>Title</p>
  </div>
  <%= f.text_field :title %>

  <div class="area">
    <p>Body</p>
  </div>
  <%= f.text_area :body %>
  <div class="action">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
</div>