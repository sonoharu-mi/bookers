<h1>Books</h1>

<table>
  <thead>
      </tr>
        <th><p>Title</p></th>
        <th><p>Body</p></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><span><%= book.title %></span></td>
          <td><span><%= book.body %></span></td>
          <td><span><%= link_to "Show", book_path(book.id) %></span></td>
          <td><span><%= link_to "Edit", edit_book_path(book) %></span></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<h3>New book</h3>

<%= form_with model: @book do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>